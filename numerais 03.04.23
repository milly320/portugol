programa
{
  
  inteiro num, contador

  funcao inicio()
  {
    para(n = 1; n <= 20; n++)
    {
      se(contador ==  3)
      {
        escreva("PIM, ")
        contador = 0;
      }
      senao
      {
        se(n < 20)
        {
          escreva(n, ", ")
        }
        senao
        {
          escreva(n, ". ")
        }

        contador++

      }
      
      util.aguarde(500)

    } 
  }
}
